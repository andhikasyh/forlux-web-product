---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <div class="relative">
    <section class="relative py-32 overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-radial from-forlux-orange-primary/10 to-transparent opacity-30 blur-3xl"></div>
      </div>
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
          <span class="inline-block px-4 py-1 text-sm font-medium text-forlux-orange-primary bg-forlux-orange-primary/10 rounded-full border border-forlux-orange-primary/20 mb-4">
            Let's Connect
          </span>
          <h1 class="text-4xl sm:text-5xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-forlux-orange-primary to-forlux-orange-secondary">
            Get in Touch
          </h1>
          <p class="text-xl text-gray-300">
            Let's discuss how we can transform your city's infrastructure
          </p>
        </div>

        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="glass-card p-8" data-aos="fade-right">
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-300">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="mt-1 block w-full rounded-lg bg-slate-800 border border-slate-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-forlux-orange-primary/50 focus:border-transparent transition-all duration-300"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-300">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="mt-1 block w-full rounded-lg bg-slate-800 border border-slate-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-forlux-orange-primary/50 focus:border-transparent transition-all duration-300"
                  required
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-300">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="mt-1 block w-full rounded-lg bg-slate-800 border border-slate-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-forlux-orange-primary/50 focus:border-transparent transition-all duration-300 resize-none"
                  required
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-forlux-orange-primary to-forlux-orange-secondary text-white py-3 px-4 rounded-lg hover:opacity-90 transition-opacity duration-300 font-medium"
              >
                Send Message
              </button>
            </form>
          </div>

          <div class="glass-card p-8" data-aos="fade-left">
            <h3 class="text-xl font-bold text-white mb-6">Contact Information</h3>
            <div class="space-y-6">
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2">Address</h4>
                <p class="text-gray-300">Jl. Sudirman No. 123</p>
                <p class="text-gray-300">Jakarta Selatan, 12190</p>
                <p class="text-gray-300">Indonesia</p>
              </div>
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2">Email</h4>
                <a 
                  href="mailto:contact@forlux.id" 
                  class="text-gray-300 hover:text-forlux-orange-primary transition-colors duration-300"
                >
                  contact@forlux.id
                </a>
              </div>
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2">Phone</h4>
                <a 
                  href="tel:+6281234567890" 
                  class="text-gray-300 hover:text-forlux-orange-primary transition-colors duration-300"
                >
                  +62 812-3456-7890
                </a>
              </div>
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2">Business Hours</h4>
                <p class="text-gray-300">Monday - Friday: 9:00 AM - 6:00 PM</p>
                <p class="text-gray-300">Saturday: 9:00 AM - 1:00 PM</p>
              </div>
            </div>

            <div class="mt-8 pt-8 border-t border-slate-800">
              <h4 class="text-sm font-medium text-gray-400 mb-4">Connect With Us</h4>
              <div class="flex space-x-4">
                <a 
                  href="#" 
                  class="text-gray-400 hover:text-forlux-orange-primary transition-colors duration-300"
                  aria-label="LinkedIn"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
                <a 
                  href="#" 
                  class="text-gray-400 hover:text-forlux-orange-primary transition-colors duration-300"
                  aria-label="Twitter"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                  </svg>
