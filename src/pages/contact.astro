---
import Layout from '../layouts/Layout.astro';
import { currentLanguage } from '../stores/languageStore';
import { translations } from '../utils/translations';

// Initial language value for SSR
const initialLang = currentLanguage.get();
---

<Layout title="Contact Us">
  <div class="relative" id="contact-page">
    <section class="relative py-32 overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-radial from-forlux-orange-primary/10 to-transparent opacity-30 blur-3xl"></div>
      </div>
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
          <span 
            class="inline-block px-4 py-1 text-sm font-medium text-forlux-orange-primary bg-forlux-orange-primary/10 rounded-full border border-forlux-orange-primary/20 mb-4"
            id="lets-connect"
          >
            Let's Connect
          </span>
          <h1 
            class="text-5xl sm:text-5xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-forlux-orange-primary to-forlux-orange-secondary"
            id="get-in-touch"
          >
            Get in Touch
          </h1>
          <p 
            class="text-xl text-gray-300"
            id="discuss-text"
          >
            Let's discuss how we can transform your city's infrastructure
          </p>
        </div>

        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="glass-card p-8" data-aos="fade-right">
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-300" id="label-name">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="mt-1 block w-full rounded-lg bg-slate-800 border border-slate-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-forlux-orange-primary/50 focus:border-transparent transition-all duration-300"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-300" id="label-email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="mt-1 block w-full rounded-lg bg-slate-800 border border-slate-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-forlux-orange-primary/50 focus:border-transparent transition-all duration-300"
                  required
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-300" id="label-message">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  class="mt-1 block w-full rounded-lg bg-slate-800 border border-slate-700 text-white px-4 py-2 focus:outline-none focus:ring-2 focus:ring-forlux-orange-primary/50 focus:border-transparent transition-all duration-300 resize-none"
                  required
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-forlux-orange-primary to-forlux-orange-secondary text-white py-3 px-4 rounded-lg hover:opacity-90 transition-opacity duration-300 font-medium"
                id="send-button"
              >
                Send Message
              </button>
            </form>
          </div>

          <div class="glass-card p-8" data-aos="fade-left">
            <h3 class="text-xl font-bold text-white mb-6" id="contact-info-title">Contact Information</h3>
            <div class="space-y-6">
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2" id="address-title">Address</h4>
                <p class="text-gray-300" id="address-line1">Kawasan Industri Cikupamas 2</p>
                <p class="text-gray-300" id="address-line2">Jl. Bhumimas VI/1, Cikupa</p>
                <p class="text-gray-300" id="address-line3">Tangerang, Banten 15710</p>
              </div>
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2" id="email-title">Email</h4>
                <a 
                  href="mailto:contact@forlux.id" 
                  class="text-gray-300 hover:text-forlux-orange-primary transition-colors duration-300"
                >
                  contact@forlux.id
                </a>
              </div>
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2" id="phone-title">Phone</h4>
                <a 
                  href="tel:+6281234567890" 
                  class="text-gray-300 hover:text-forlux-orange-primary transition-colors duration-300"
                >
                  +62-822-1010-7918
                </a>
              </div>
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2" id="hours-title">Business Hours</h4>
                <p class="text-gray-300" id="hours-weekday">Monday - Friday: 9:00 AM - 6:00 PM</p>
                <p class="text-gray-300" id="hours-weekend">Saturday: 9:00 AM - 1:00 PM</p>
              </div>
            </div>

            <div class="mt-8 pt-8 border-t border-slate-800">
              <h4 class="text-sm font-medium text-gray-400 mb-4" id="social-title">Connect With Us</h4>
              <div class="flex space-x-4">
                <a 
                  href="#" 
                  class="text-gray-400 hover:text-forlux-orange-primary transition-colors duration-300"
                  aria-label="LinkedIn"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
                <a 
                  href="#" 
                  class="text-gray-400 hover:text-forlux-orange-primary transition-colors duration-300"
                  aria-label="Twitter"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
                  </svg>
                </a>
                <a 
                  href="#" 
                  class="text-gray-400 hover:text-forlux-orange-primary transition-colors duration-300"
                  aria-label="Instagram"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<script>
  import { currentLanguage } from '../stores/languageStore';
  import { translations } from '../utils/translations';

  function updateContent(lang) {
    const t = translations[lang].contact;

    // Update header content
    document.getElementById('lets-connect').textContent = t.letsConnect;
    document.getElementById('get-in-touch').textContent = t.getInTouch;
    document.getElementById('discuss-text').textContent = t.discuss;

    // Update form labels
    document.getElementById('label-name').textContent = t.form.name;
    document.getElementById('label-email').textContent = t.form.email;
    document.getElementById('label-message').textContent = t.form.message;
    document.getElementById('send-button').textContent = t.form.send;

    // Update contact information
    document.getElementById('contact-info-title').textContent = t.info.title;
    document.getElementById('address-title').textContent = t.info.address.title;
    document.getElementById('address-line1').textContent = t.info.address.line1;
    document.getElementById('address-line2').textContent = t.info.address.line2;
    document.getElementById('address-line3').textContent = t.info.address.line3;
    document.getElementById('email-title').textContent = t.info.email;
    document.getElementById('phone-title').textContent = t.info.phone;
    document.getElementById('hours-title').textContent = t.info.hours.title;
    document.getElementById('hours-weekday').textContent = t.info.hours.weekday;
    document.getElementById('hours-weekend').textContent = t.info.hours.weekend;
    document.getElementById('social-title').textContent = t.info.social;
  }

  function initContactPage() {
    // Initial render
    updateContent(currentLanguage.get());

    // Listen for language changes
    const unsubscribe = currentLanguage.subscribe(newLang => {
      updateContent(newLang);
    });

    // Cleanup subscription when component is destroyed
    return unsubscribe;
  }

  // Handle initial load and page transitions
  document.addEventListener('astro:page-load', () => {
    const unsubscribe = initContactPage();
    
    // Cleanup on page transition
    document.addEventListener('astro:before-preparation', () => {
      unsubscribe();
    }, { once: true });
  });
</script>