---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'Products',
    links: [
      { name: 'FORLUX Integra', href: '/products#integra' },
      { name: 'FORLUX Luminox', href: '/products#luminox' },
      { name: 'FORLUX SmartView', href: '/products#SmartView' },
      { name: 'FORLUX-SAMSON', href: '/products#samson' }
    ]
  },
  {
    title: 'Company',
    links: [
      { name: 'About Us', href: '/about' },
      { name: 'Careers', href: '/careers' },
      { name: 'Contact', href: '/contact' },
      { name: 'Partners', href: '/partners' }
    ]
  },
  {
    title: 'Resources',
    links: [
      { name: 'Documentation', href: '/docs' },
      { name: 'Support', href: '/support' },
      { name: 'Case Studies', href: '/case-studies' },
      { name: 'Blog', href: '/blog' }
    ]
  }
];
---

<footer class="relative mt-32 bg-slate-900/95 backdrop-blur-xl border-t border-slate-800">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-slate-900/50 to-slate-900/95"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom,_var(--tw-gradient-stops))] from-forlux-orange-primary/5 via-transparent to-transparent"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-12 lg:py-16 grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="col-span-2 md:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <img src="/forlux-logo.png" alt="FORLUX Logo" class="h-8 w-auto" />
          <span class="text-sm text-gray-400">by Caturmukti</span>
        </div>
        <p class="text-gray-400 text-sm mb-4 max-w-xs">
          Indonesia's first fully-integrated smart traffic system. Built with pride, powered by innovation.
        </p>
        <div class="flex space-x-4">
          <a 
            href="#" 
            class="text-gray-400 hover:text-forlux-orange-primary transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a 
            href="#" 
            class="text-gray-400 hover:text-forlux-orange-primary transition-colors"
            aria-label="Twitter"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
            </svg>
          </a>
          <a 
            href="#" 
            class="text-gray-400 hover:text-forlux-orange-primary transition-colors"
            aria-label="Instagram"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Links Sections -->
      {footerLinks.map((section) => (
        <div>
          <h3 class="text-sm font-semibold text-white uppercase tracking-wider mb-4">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a 
                  href={link.href}
                  class="text-sm text-gray-400 hover:text-forlux-orange-primary transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-slate-800 py-8">
      <div class="flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
        <div class="flex items-center space-x-2">
          <img src="/forlux-logo.png" alt="FORLUX Logo" class="h-6 w-auto" />
          <span class="text-sm text-gray-400">by Caturmukti Â© {currentYear}</span>
        </div>
        <div class="flex space-x-6">
          <a href="/privacy" class="text-sm text-gray-400 hover:text-forlux-orange-primary transition-colors">
            Privacy Policy
          </a>
          <a href="/terms" class="text-sm text-gray-400 hover:text-forlux-orange-primary transition-colors">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>