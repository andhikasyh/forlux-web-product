---
interface Props {
  title: string;
  description: string;
  icon: string;
  gradient: string;
  features: string[];
}

const { title, description, icon, gradient, features } = Astro.props;
---

<div 
  class="glass-card p-6 hover:scale-105 transition-all duration-300"
  data-aos="fade-up"
>
  <div class={`w-12 h-12 rounded-lg flex items-center justify-center mb-4 bg-gradient-to-r ${gradient} bg-opacity-10`}>
    <span class="text-2xl">{icon}</span>
  </div>

  <h3 class={`text-xl font-bold mb-2 bg-clip-text text-transparent bg-gradient-to-r ${gradient}`}>
    {title}
  </h3>

  <p class="text-gray-400 mb-4 text-sm">
    {description}
  </p>

  <ul class="space-y-2">
    {features.map((feature) => (
      <li class="flex items-center text-sm text-gray-400">
        <span class={`w-1.5 h-1.5 rounded-full mr-2 bg-gradient-to-r ${gradient}`}></span>
        {feature}
      </li>
    ))}
  </ul>
</div>